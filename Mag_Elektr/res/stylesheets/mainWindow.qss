QMainWindow
{
    min-height: 7px;
    min-width: 10px;
}

QToolBar
{
    border: none;
    padding: 0px;
    spacing: 0px;
    background-color: rgba(0, 128, 0, 8);
}

QToolButton
{
    padding: 5px;
    icon-size: 20px;
    font-size: 20px;
    min-height: 30px;
    border: 1px solid green;
    background-color: transparent;
}

QToolButton:hover
{
    background-color: darkgreen;
}

QToolButton:checked
{
    background-color: green;
    color: palette(Base);
}

QToolButton::menu-indicator
{
    image: none;
    subcontrol-origin: padding;
    subcontrol-position: right center;
    width: 0px;
}